<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="20dp"
              android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="播放状态"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:id="@+id/tv_1"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
        <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:text="00:00"
                android:gravity="center_vertical | center_horizontal"
                android:id="@+id/time_l"/>

        <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:text="00:00"
                android:gravity="center_vertical | center_horizontal"
                android:id="@+id/time_r"/>

        <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/time_r"
                android:layout_toRightOf="@id/time_l"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/design_default_color_primary_variant"
                android:thumbTint="@color/design_default_color_primary_variant"

                android:id="@+id/seekbar"/>

    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="播放"
                android:onClick="play_onclick"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="暂停"
                android:onClick="pause_onclick"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="停止"
                android:onClick="stop_onclick"/>
        <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="退出"
                android:onClick="exit_onclick"/>
    </LinearLayout>

</LinearLayout>