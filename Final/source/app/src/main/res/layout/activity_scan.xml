<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

    <!-- Title -->
    <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ScAnimal"
            android:textSize="50dp"
            android:textColor="@color/variant"
            android:fontFamily="sans-serif-black"
            android:textFontWeight="900"
            app:layout_constraintTop_toTopOf="@id/block"
            app:layout_constraintBottom_toTopOf="@id/ivCapture"
            app:layout_constraintStart_toStartOf="@id/block"
            app:layout_constraintEnd_toEndOf="@id/block"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="_____"
            android:textSize="50dp"
            android:textColor="@color/variant"
            android:fontFamily="sans-serif-black"
            android:textFontWeight="900"
            app:layout_constraintBaseline_toBottomOf="@id/title"
            app:layout_constraintLeft_toLeftOf="@id/title"/>

    <!-- Image View -->
    <com.labx.scanimal.ScanResultView
            android:id="@+id/ivPreview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/app_name"
            android:focusableInTouchMode="true"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@id/mask"
            app:layout_constraintEnd_toEndOf="@id/mask"
            app:layout_constraintStart_toStartOf="@id/mask"
            app:layout_constraintTop_toTopOf="@id/mask"/>
    <TextView
            android:id="@+id/mask"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ic_rectbg"
            android:layout_margin="6dp"
            app:layout_constraintStart_toStartOf="@id/block"
            app:layout_constraintEnd_toEndOf="@id/block"
            app:layout_constraintTop_toTopOf="@id/block"
            app:layout_constraintBottom_toTopOf="@id/bottom_bar"/>


    <!-- Bottom Bar -->
    <TextView
            android:id="@+id/bottom_bar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="13dp"
            android:background="@drawable/ic_rectbar"
            app:layout_constraintStart_toStartOf="@id/block"
            app:layout_constraintEnd_toEndOf="@id/block"
            app:layout_constraintTop_toTopOf="@id/blank_bar"
            app:layout_constraintBottom_toBottomOf="@id/block"/>
    <TextView
            android:id="@+id/blank_bar"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            app:layout_constraintBottom_toTopOf="@id/ivCapture"/>
    <com.google.android.material.button.MaterialButton
            android:id="@+id/ivCapture"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginBottom="30dp"
            android:insetLeft="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:insetTop="3dp"
            app:strokeWidth="4dp"
            app:strokeColor="@color/white"
            app:icon="@drawable/ic_lens"
            app:backgroundTint="@color/primary"
            app:cornerRadius="110dp"
            app:iconGravity="textStart"
            app:iconTint="@color/white"
            app:iconPadding="0dp"
            app:iconSize="55dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <com.google.android.material.button.MaterialButton
            android:id="@+id/ivGallery"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:insetLeft="3dp"
            android:insetRight="3dp"
            android:insetBottom="3dp"
            android:insetTop="3dp"
            app:icon="@drawable/ic_gallery"
            app:strokeWidth="4dp"
            app:strokeColor="@color/white"
            app:backgroundTint="@color/secondary"
            app:cornerRadius="80dp"
            app:iconGravity="textStart"
            app:iconTint="@color/white"
            app:iconSize="40dp"
            app:iconPadding="0dp"
            app:layout_constraintBaseline_toBaselineOf="@id/ivCapture"
            app:layout_constraintStart_toEndOf="@id/ivCapture"
            app:layout_constraintEnd_toEndOf="@id/bottom_bar"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="一起发现小动物!"
            android:textSize="12dp"
            android:textColor="@color/outline"
            android:fontFamily="sans-serif-black"
            android:textFontWeight="900"
            app:layout_constraintStart_toStartOf="@id/bottom_bar"
            app:layout_constraintEnd_toStartOf="@id/ivCapture"
            app:layout_constraintBaseline_toBaselineOf="@id/ivCapture"/>

    <TextView
            android:id="@+id/block"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ic_rect"
            android:layout_margin="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
